{
  "name": "productsynch",
  "version": "1.0.0",
  "private": true,
  "description": "ProductSynch monorepo (API + Web) following the technical specification.",
  "license": "ISC",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "npm --workspace apps/api run dev",
    "dev:web": "npm --workspace apps/web run dev",
    "build": "npm run build:shared && npm run build:api && npm run build:web",
    "build:shared": "npm --workspace packages/shared run build",
    "build:api": "npm --workspace apps/api run build",
    "build:web": "npm --workspace apps/web run build",
    "migrate:deploy": "cd apps/api && npx prisma migrate deploy",
    "lint": "npm --workspaces run lint",
    "format": "npm --workspaces run format",
    "test": "npm --workspaces run test"
  },
  "devDependencies": {
    "typescript": "^5.4.0"
  }
}
