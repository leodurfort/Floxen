NODE_ENV=development
PORT=3001
# Comma-separated list of allowed origins (or * for all)
CORS_ORIGIN=http://localhost:3000

# Database & cache (Railway)
DATABASE_URL=postgresql://postgres:password@localhost:5432/floxen
DATABASE_PUBLIC_URL=postgresql://postgres:password@localhost:5432/floxen
REDIS_URL=redis://localhost:6379
REDIS_PUBLIC_URL=redis://localhost:6379

# Auth & security
# Generate JWT secrets with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=your-access-secret-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-min-32-chars
# Generate encryption key with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# REQUIRED: Must be a 64-character hex string (32 bytes)
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# OpenAI (optional)
OPENAI_API_KEY=sk-...

# WooCommerce OAuth
WOO_REDIRECT_URI=http://localhost:3001/api/v1/shops/:id/oauth/callback
WEB_BASE_URL=http://localhost:3000

# Email (Resend)
RESEND_API_KEY=re_
RESEND_FROM=no-reply@yourdomain.com

# Stripe Billing
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_STARTER_MONTHLY=price_...
STRIPE_PRICE_STARTER_ANNUAL=price_...
STRIPE_PRICE_PRO_MONTHLY=price_...
STRIPE_PRICE_PRO_ANNUAL=price_...

# Storage (Cloudflare R2 / S3-compatible)
S3_BUCKET=floxen-feeds
S3_REGION=auto
S3_ENDPOINT=https://your-r2-endpoint.r2.cloudflarestorage.com
S3_ACCESS_KEY_ID=...
S3_SECRET_ACCESS_KEY=...

# Web client
NEXT_PUBLIC_API_URL=http://localhost:3001
