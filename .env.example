NODE_ENV=development
PORT=3001
CORS_ORIGIN=http://localhost:3000

# Database & cache (Railway)
DATABASE_URL=postgresql://postgres:password@localhost:5432/productsynch
DATABASE_PUBLIC_URL=postgresql://postgres:password@localhost:5432/productsynch
REDIS_URL=redis://localhost:6379
REDIS_PUBLIC_URL=redis://localhost:6379

# Auth & security
JWT_SECRET=your-access-secret
JWT_REFRESH_SECRET=your-refresh-secret
ENCRYPTION_KEY=32-byte-hex-key

# OpenAI + Qdrant (optional)
OPENAI_API_KEY=sk-...
QDRANT_URL=
QDRANT_API_KEY=

# WooCommerce OAuth
WOO_REDIRECT_URI=http://localhost:3001/api/v1/shops/oauth/callback

# Email (Resend)
RESEND_API_KEY=re_
RESEND_FROM=no-reply@yourdomain.com

# Storage (Cloudflare R2 / S3-compatible)
S3_BUCKET=productsynch-feeds
S3_REGION=auto
S3_ENDPOINT=https://your-r2-endpoint.r2.cloudflarestorage.com
S3_ACCESS_KEY_ID=...
S3_SECRET_ACCESS_KEY=...

# Web client
NEXT_PUBLIC_API_URL=http://localhost:3001
