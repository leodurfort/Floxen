NODE_ENV=development
PORT=3001
CORS_ORIGIN=http://localhost:3000

# Database & cache (Railway recommended)
DATABASE_URL=postgresql://postgres:password@localhost:5432/productsynch
REDIS_URL=redis://localhost:6379

# Auth & security
JWT_SECRET=your-access-secret
JWT_REFRESH_SECRET=your-refresh-secret
ENCRYPTION_KEY=32-byte-hex-key

# OpenAI + Qdrant
OPENAI_API_KEY=sk-...
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-key

# WooCommerce OAuth
WOO_REDIRECT_URI=http://localhost:3001/api/v1/shops/oauth/callback

# Email (Resend)
RESEND_API_KEY=re_
RESEND_FROM=no-reply@yourdomain.com

# Storage (S3/R2 for feeds)
S3_BUCKET=productsynch-feeds
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=...
S3_SECRET_ACCESS_KEY=...
