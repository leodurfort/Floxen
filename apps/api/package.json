{
  "name": "@productsynch/api",
  "version": "1.0.2",
  "private": true,
  "description": "ProductSynch API service (Express + TypeScript)",
  "author": "ProductSynch",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "prisma generate && tsc -p tsconfig.json",
