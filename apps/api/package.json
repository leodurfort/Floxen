    "bcryptjs": "^2.4.3",
    "bullmq": "^5.7.6",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "openai": "^4.73.0",
    "pg": "^8.11.5",
    "resend": "^3.2.0",
    "zod": "^3.23.8"
